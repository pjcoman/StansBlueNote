<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:clickable="false"
              android:orientation="vertical"
              android:baselineAligned="false"
    android:padding="10dp">

    <TextView
    android:id="@+id/nameTxt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="center_horizontal"
    android:textSize="16sp"
    android:textStyle="bold"
    android:text="name of beer"
    android:textColor="#97B3EF"
        android:padding="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/beerimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/beericon"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <TextView
            android:id="@+id/wherefromTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:textSize="16sp"
            android:text="where from"

            android:textStyle="bold"
            android:textColor="@color/Yellow"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="2dp"
        android:gravity="center">


        <TextView
        android:id="@+id/beertypeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="type of beer"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/Yellow"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

        <TextView
            android:text=" a.b.v. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewABV"
            android:textColor="@color/Yellow" />

        <TextView
        android:id="@+id/abvTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

            android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/Yellow"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/beerlistrow_rvlist"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="false"
              android:orientation="vertical"
              android:baselineAligned="false"
              android:gravity="center_vertical|center_horizontal"
              android:padding="10dp"
              android:background="@drawable/layout_rounded_corners_blue">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:id="@+id/beerimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/beericon"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:adjustViewBounds="false"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="name of beer"
            android:textColor="#97B3EF"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_weight="1.5" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
        android:id="@+id/abvTxtlabel"
            android:layout_height="wrap_content"
        android:text="@string/column3header"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/Yellow"
        android:visibility="visible"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="1dp" />

        <TextView
        android:id="@+id/abvTxt"
            android:layout_height="wrap_content"

        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/Yellow"
        android:visibility="visible"
            android:layout_width="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="1dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/beertypeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="type of beer"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/Yellow"
            android:visibility="visible"
            android:paddingLeft="5dp" />

        <TextView
        android:id="@+id/wherefromTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp"
        android:text="where from"

        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/Yellow"
        android:visibility="visible"
            android:paddingRight="5dp" />
    </LinearLayout>

</LinearLayout>
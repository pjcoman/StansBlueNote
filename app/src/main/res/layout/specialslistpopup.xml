<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/stansbackground"
    android:paddingTop="80dp"
    android:paddingBottom="80dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
                tools:context="comapps.stansbluenote.app.ParseSpecialsListViewPopUp">


    <ListView
        android:id="@+id/specialslist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:textColor="@color/Yellow"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_centerInParent="true" />

    <Button

        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/exitbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/closebuttonred"
        android:onClick="onExitPressed"
        android:layout_below="@+id/specialslist" />


</RelativeLayout>